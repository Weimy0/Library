<Window x:Class="Library.Views.SignInWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Library.Views"
        mc:Ignorable="d"
        Title="SignInWindow" Height="320" Width="200"
        WindowStartupLocation ="CenterScreen">
    <Grid Background="AliceBlue" RenderTransformOrigin="0.507,0.483">
        <Grid.RowDefinitions>
            <RowDefinition Height="57*"/>
            <RowDefinition Height="70*"/>
        </Grid.RowDefinitions>
        <Image Source="/image/libr.png" />
        <StackPanel Margin="0,1,0,0" Grid.Row="1">
            <TextBlock 
                Text="Логин:"
                Width="150"
                Margin="0,10,0,0"/>
            <TextBox
                Text="{Binding Login, UpdateSourceTrigger=PropertyChanged}"
                Width="150"
                Margin="0,5,0,0"/>
            <TextBlock 
                Text="Пароль:"
                Width="150"
                Margin="0,5,0,0"/>
            <PasswordBox
                x:Name="PasswordBox"
                Width="150"
                Margin="0,5,0,0"/>

            <Button
                Content="Войти"
                Command="{Binding AuthorizationButton}"
                Width="100"
                Margin="0,20,0,0"
                Background="LightBlue">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </Button.Resources>
            </Button>
        </StackPanel>
    </Grid>
</Window>
