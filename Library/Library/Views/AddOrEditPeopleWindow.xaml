<Window x:Class="Library.Views.AddOrEditPeopleWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Library.Views"
        mc:Ignorable="d"
        Title="AddOrEditPeopleWindow" Height="450" Width="600">
    <Grid  Background="AliceBlue">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="0.6*"/>
        </Grid.ColumnDefinitions>

        <ListView
            ItemsSource="{Binding GetPeoples, UpdateSourceTrigger=PropertyChanged}"
            SelectedItem="{Binding SelectedPeople, UpdateSourceTrigger=PropertyChanged}"
            Background="AliceBlue">
            <ListView.ItemContainerStyle>
                <Style
                    TargetType="{x:Type ListViewItem}">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate
                                TargetType="{x:Type ListViewItem}">
                                <Border
                                    x:Name="Border"
                                    BorderBrush="Black"
                                    BorderThickness="1"
                                    Margin="5">
                                    <Grid
                                        Background="{TemplateBinding Background}">
                                        <TextBlock
                                            Text="{Binding FullName, StringFormat=ФИО: {0}, UpdateSourceTrigger=PropertyChanged}"/>
                                    </Grid>
                                </Border>

                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="green" TargetName="Border"/>
                                    </Trigger>

                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="Lightgreen" TargetName="Border"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </ListView.ItemContainerStyle>
        </ListView>

        <StackPanel
            Grid.Column="1">
            <TextBlock 
                Text="Фамилия:"
                Width="200"
                Margin="0,4,0,0"/>
            <TextBox
                Text="{Binding People.Surname, UpdateSourceTrigger=PropertyChanged}"
                Width="200"
                Margin="0,4,0,0"/>
            <TextBlock 
                Text="Имя:"
                Width="200"
                Margin="0,4,0,0"/>
            <TextBox
                Text="{Binding People.Name, UpdateSourceTrigger=PropertyChanged}"
                Width="200"
                Margin="0,4,0,0"/>
            <TextBlock 
                Text="Очтчестов:"
                Width="200"
                Margin="0,4,0,0"/>
            <TextBox
                Text="{Binding People.Lastname, UpdateSourceTrigger=PropertyChanged}"
                Width="200"
                Margin="0,4,0,0"/>

            <Button
                Content="Добавить"
                Command="{Binding AddButton}"
                Margin="0,200,0,0"
                Width="100"
                Background="LightBlue">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </Button.Resources>
            </Button>

            <Button
                Content="Удалить"
                Command="{Binding DeleteButton}"
                Margin="0,20,0,0" 
                Width="100"
                Background="LightBlue">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </Button.Resources>
            </Button>
        </StackPanel>
    </Grid>
</Window>
